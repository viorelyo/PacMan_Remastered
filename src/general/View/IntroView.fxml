            </ImageView>
            <Button fx:id="startBtn" layoutX="196.0" layoutY="250.0" mnemonicParsing="false" onMouseClicked="#onStartClicked" prefHeight="39.0" prefWidth="142.0" text="START" textFill="#e50012">
